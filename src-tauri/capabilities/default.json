{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:read-dirs",
    "fs:allow-home-read",
    "fs:allow-home-read-recursive",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME" }, { "path": "$HOME/**" }, { "path": "$HOME/.*" }, { "path": "$HOME/.*/**" }]
    }
  ]
}
