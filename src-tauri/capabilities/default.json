{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME" }, { "path": "$HOME/**" }]
    },
    "fs:allow-exists",
    "path:allow-resolve-directory",
    "path:allow-join"
  ]
}
